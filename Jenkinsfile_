pipeline {
    agent any

    environment {
        DOCKER_CREDENTIALS_ID = 'dockerhub-credentials' // ID delle credenziali Docker Hub in Jenkins
        DOCKER_IMAGE = 'tuo-username-dockerhub/tuo-repo' // Nome dell'immagine Docker
        GIT_REPO = 'https://github.com/tuo-username/tuo-repo.git' // URL del repository GitHub
    }

    stages {
        stage('Clone repository') {
            steps {
                git url: "${env.GIT_REPO}", branch: 'main'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${env.DOCKER_IMAGE}")
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${env.DOCKER_CREDENTIALS_ID}") {
                        docker.image("${env.DOCKER_IMAGE}").push()
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs() // Pulisce la workspace
        }
    }
}
